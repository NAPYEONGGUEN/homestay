<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.homestay.korea.DAO.IPlaceDetailDataDAO">

	<select id="readWithPlaceDetailData" resultType="com.homestay.korea.DTO.PlaceDetailDataDTO">
		SELECT 
			*
		FROM
			place_detailData
		WHERE
			contentid=#{contentid}
	</select>
	
	<select id="readWithPlaceDetailDataContent_value" resultType="com.homestay.korea.DTO.PlaceDetailDataDTO">
		SELECT 
			*
		FROM
			place_detailData
		WHERE
			contentid=#{contentid}
		AND
			content_category = #{content_category}
	</select>
	
	<insert id="insert">
		insert into place_detailData(cotent_no, content_category, content, contentid)
		values(
			(SELECT IFNULL(MAX(cotent_no)+1,1) FROM place_detailData pd),
			#{content_category},#{content},#{contentid}
		)
	</insert>
	
	<select id="readDetailData" resultType="com.homestay.korea.DTO.PlaceDetailDataDTO">
		select *
		from place_detailData
		where contentid=#{contentId}
	</select>

	<delete id="deleteDetailData">
		delete from place_detailData where contentid=#{contentId}
	</delete>
</mapper>



